{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "packages/kit" },
    { "path": "packages/react" },
    { "path": "packages/cli" },
    { "path": "packages/types" }
  ]
}
