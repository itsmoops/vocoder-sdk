{
  "name": "vocoder-sdk",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "release": "changeset publish",
    "prepublishOnly": "pnpm build",
    "clean": "find . -name 'dist' -type d -exec rm -rf {} + 2>/dev/null || true",
    "clean:all": "pnpm clean && find . -name 'node_modules' -type d -exec rm -rf {} + 2>/dev/null || true && pnpm store prune && pnpm install && pnpm build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.19.9",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.4.0"
  }
}
